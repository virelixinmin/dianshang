<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_312"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    android:background="@drawable/btn"
    >

    <TextView
        android:id="@+id/myaddress_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="李小二"
        android:textColor="#666666" />
    <TextView
        android:id="@+id/myaddress_item_phone"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="12345678901"
        android:textSize="@dimen/sp_12"
        android:layout_marginRight="@dimen/dp_20"
        android:textColor="#666666" />
    <TextView
        android:id="@+id/myaddress_item_address"
        android:layout_width="match_parent"
        android:text="广东省南岸那那那那那暗"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/myaddress_item_name"
        />
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/myaddress_item_address"
        android:background="#f2f2f2"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="@dimen/dp_272"
        android:layout_height="@dimen/dp_1" />
    <RadioButton
        android:button="@null"

        android:id="@+id/myaddress_item_radio"
        android:layout_below="@id/myaddress_item_address"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15" />
    <TextView
        android:id="@+id/default_tv"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignTop="@id/myaddress_item_radio"
        android:layout_toRightOf="@id/myaddress_item_radio"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="设为默认地址"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
