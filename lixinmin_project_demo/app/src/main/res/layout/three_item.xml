<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    android:id="@+id/re_zhongcai_tanchu"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <android.support.v7.widget.RecyclerView
                android:layout_centerHorizontal="true"
                android:id="@+id/recy_item"
                android:layout_width="@dimen/dp_292"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_30"></android.support.v7.widget.RecyclerView>



        
        
    </ScrollView>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_above="@+id/ll"
            android:orientation="horizontal"
            android:background="#fff">

            <CheckBox
                android:id="@+id/cb_quanxuan"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

            <TextView
                android:id="@+id/quanxuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_toRightOf="@+id/cb_quanxuan"
                android:text="全选" />

            <TextView
                android:id="@+id/heji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_toRightOf="@+id/quanxuan"
                android:text="合计:" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/heji"
                android:text="$0"
                android:textColor="#f00"
                android:textSize="@dimen/dp_10" />
            <Button
                android:id="@+id/jiesuan"
                android:layout_width="@dimen/dp_118"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_15"
                android:textColor="#fff"
                android:text="去结算"
                android:background="#ff1493"/>

        </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_51"
        android:layout_alignParentBottom="true"></LinearLayout>

</RelativeLayout>
