<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.SousuoActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"

        android:background="#fff">
        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/neirong"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@mipmap/speak"
            android:cropToPadding="true"
            android:layout_marginLeft="20dp"/>
        <!--<com.bw.project_demo.ui.fragment.widght.HorizontalExpandMenu-->
            <!--android:layout_marginTop="@dimen/dp_3"-->
            <!--android:layout_marginBottom="@dimen/dp_3"-->
            <!--android:layout_marginLeft="@dimen/dp_10"-->
            <!--android:layout_marginRight="@dimen/dp_10"-->
            <!--android:layout_toRightOf="@+id/neirong"-->
            <!--android:id="@+id/huoqu"-->
            <!--android:layout_height="@dimen/dp_40"-->
            <!--app:back_color="#bbffee">-->
        <!--</com.bw.project_demo.ui.fragment.widght.HorizontalExpandMenu>-->
            <EditText
                android:layout_centerVertical="true"
                android:background="@drawable/btnss"
                android:layout_marginLeft="@dimen/dp_56"
                android:layout_marginRight="@dimen/dp_56"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"
                android:id="@+id/edit"
                android:paddingLeft="@dimen/dp_10"
                android:hint="请输入搜索内容"/>


        <ImageButton
        android:layout_centerVertical="true"
        android:id="@+id/huoqu"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:background="@mipmap/sousuo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp" />

    </RelativeLayout>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门搜索"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:padding="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="饿了么"/>
        <TextView
            android:padding="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美团外卖"/>
        <TextView
            android:padding="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="淘宝"/>
        <TextView
            android:padding="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="滴滴打车"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:text="历史记录"
        android:gravity="center"
        android:background="#fff"
        android:textColor="#f00"/>
    <com.bw.project_demo.ui.fragment.FlowLayoutView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff"
        android:id="@+id/tab">
    </com.bw.project_demo.ui.fragment.FlowLayoutView>
    <Button
        android:id="@+id/clearData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空历史记录"
        android:layout_gravity="center"/>
</LinearLayout>