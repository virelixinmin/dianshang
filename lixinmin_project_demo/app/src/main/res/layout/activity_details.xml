            <!--<TextView-->
                <!--android:id="@+id/goodsContent_product_introductionText"-->
                <!--android:layout_marginTop="@dimen/dp_10"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="魅可(max) 经典唇膏,子弹头型"/>-->

            <!--<com.facebook.drawee.view.SimpleDraweeView-->
                <!--android:layout_marginTop="@dimen/dp_20"-->
                <!--android:id="@+id/goodsContent_product_introductionImg"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp_306"-->
                <!--android:src="@mipmap/ic_launcher"/>
                -->
            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/web"></WebView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="@dimen/dp_41"
        android:layout_height="@dimen/dp_35"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_80"
        android:background="@drawable/shou_view"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shopping_care"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/common_btn_add_n_hdpi" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/shou_view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_width="@dimen/dp_41"
        android:layout_height="@dimen/dp_35"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/buy_goods"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/common_btn_buy_n_hdpi"
            />

    </LinearLayout>

</RelativeLayout>
