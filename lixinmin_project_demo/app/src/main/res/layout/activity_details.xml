<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:id="@+id/title">
        <ImageView
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/back_detail"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/back"
            android:layout_marginTop="@dimen/dp_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_30"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_50"
            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"/>

    </LinearLayout>
    <ScrollView
        android:layout_marginTop="@dimen/dp_60"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_24">

            <RelativeLayout
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_274">

                <com.stx.xhb.xbanner.XBanner
                    android:id="@+id/goodsContentPage_ViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:isShowIndicatorOnlyOne="true"
                    app:isShowNumberIndicator="true"
                    android:clipChildren="false"
                    app:isTipsMarquee="true"
                    app:tipTextSize="@dimen/dp_20"
                    app:tipTextColor="#f00"
                    app:pointsPosition="RIGHT"
                    ></com.stx.xhb.xbanner.XBanner>


                <!--<Button-->
                    <!--android:layout_width="@dimen/dp_48"-->
                    <!--android:layout_height="@dimen/dp_24"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_alignParentBottom="true"-->
