<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/money_title"
            android:layout_marginTop="@dimen/dp_118"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:text="选择支付方式"
            android:textSize="@dimen/sp_16"
            android:textColor="#666"
            android:layout_marginBottom="@dimen/dp_20"
            />
        <RelativeLayout
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_180"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/money_title"
            android:padding="@dimen/dp_10"
            android:background="@drawable/btn"
            >
            <ImageView
                android:id="@+id/image_money"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/common_icon_money_n_xxhdpi"
                />
            <TextView
                android:layout_toRightOf="@id/image_money"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:text="余额支付"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                android:textColor="#666"
                android:gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/image_weixin"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_below="@+id/image_money"
                android:background="@mipmap/common_icon_weixin_n_xxhdpi"
                />
            <TextView
                android:layout_toRightOf="@id/image_money"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:text="微信支付"
                android:layout_alignTop="@id/image_weixin"
                android:layout_alignBottom="@id/image_weixin"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                android:textColor="#666"
                android:gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/image_zhifubao"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_below="@+id/image_weixin"
                android:background="@mipmap/common_icon_zhifubao_n_xxhdpi"
                />
            <TextView
                android:layout_toRightOf="@id/image_money"
                android:layout_width="wrap_content"
                android:text="支付宝支付"
                android:layout_height="@dimen/dp_40"
                android:layout_alignTop="@id/image_zhifubao"
                android:layout_alignBottom="@id/image_zhifubao"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="#666"
                android:textSize="@dimen/sp_16"
                android:gravity="center_vertical"
                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_150"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dp_14"
                >
                <RadioButton
                    android:id="@+id/radio_yue"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    />
                <RadioButton
                    android:id="@+id/radio_wei"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_30"

                    />
                <RadioButton
                    android:id="@+id/radio_zhi"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"

                    />
            </RadioGroup>
        </RelativeLayout>

        <Button
            android:id="@+id/money_pay"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_40"
            android:textSize="@dimen/dp_14"

            android:text="支付"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_100"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/pay_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5e5e5e"
        android:alpha="0.9"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/success_image"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_132"
            android:background="@mipmap/pay_succ_ss"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/success_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/success_image"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_60"
            android:text="支付成功"
            android:textColor="#fff"
            android:textSize="@dimen/sp_20"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/success_back"
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_40"
            android:layout_centerHorizontal="true"

            android:text="返回主页"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14"
            android:layout_below="@+id/success_text"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pay_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5e5e5e"
        android:visibility="gone"
        android:alpha="0.9"
        >
        <ImageView
            android:id="@+id/fail_image"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_132"
            android:background="@mipmap/group_2"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/fail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fail_image"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="支付失败"
            android:textColor="#fff"
            android:textSize="@dimen/sp_20"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/fail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/dp_10"
            android:text="暂未开通微信与支付宝支付\n请选择余额支付"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12"
            android:layout_below="@+id/fail_text"
            />
        <Button
            android:id="@+id/fail_pay"
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_40"

            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:text="继续支付"
            android:layout_marginTop="@dimen/sp_40"
            android:layout_below="@id/fail_back"
            android:textSize="@dimen/sp_14"
            />
    </RelativeLayout>
</RelativeLayout>