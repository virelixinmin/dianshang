<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_one"
    >

    <LinearLayout
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_135"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/men_yi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="#fff"
                android:text="男装"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/women_yi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="#fff"
                android:text="女装"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/women_xie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="#fff"
                android:text="女鞋"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/men_txue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="#fff"
                android:text="T恤"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/meifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="#fff"
                android:text="美妆护肤"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/shuma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="#fff"
                android:text="手机数据"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/category_icon_sweater_n"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打底毛衣"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/category_icon_pants_n"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="裤装"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/category_icon_skirt_n"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="裙装"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_5"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/category_icon_coat_n"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="外套"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/category_icon_hoodie_n"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卫衣"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>